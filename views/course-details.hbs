<main>
	<div class="container">
		<h1 class="my-4">Course title : {{title}}</h1>

		<div class="row">
			<div class="col-md-8">
				<img class="img-fluid" src="{{imgUrl}}" alt="{{title}}" />
			</div>

			<div class="col-md-4 text-center">
				<h3 class="my-3">Course Description</h3>
				<p>{{description}}</p>
				{{#if isCreator}}
					<a
						class="btn btn-danger"
						href="/delete/course/{{_id}}"
						onclick="return confirm('Are you sure you want to delete this course?')"
					>Delete</a>
					<a
						class="btn btn-warning"
						href="/edit/course/{{_id}}"
					>Edit</a>
				{{else if enrolled}}
					<span class="enrolled-span">You are already enrolled</span>
				{{else}}
					<a class="btn btn-primary" href="/enroll/{{_id}}">Enroll</a>
				{{/if}}
			</div>
		</div>
	</div>
</main>